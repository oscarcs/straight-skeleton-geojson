{
	"compilerOptions": {
		"module": "ES2020",
		"target": "es6",
		"lib": [
			"es6"
		],
		"outDir": "./dist",
		"declaration": true,
		"sourceMap": true,
		"noUnusedLocals": true,
		"downlevelIteration": true,
		"noImplicitOverride": true,
		"noImplicitReturns": true,
		"noImplicitAny": true,
		"types": [] // Prevent TypeScript from including random types in compilation
	},
	"include": [
		"src/lib"
	],
}